<div class="container">
<br/>
<h2 style="color:white; ">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,style:'color:white;' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <br/>
    <%= f.label :password,style:'color:white;' %>
    <% if @minimum_password_length %><br/>
    <em style="color:white;">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",style:'color:white;' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,style:'color:white;' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up",class:'btn btn-primary mt-3' %>
  </div>
<% end %>
<br/>
<button class="btn btn-dark"><%= render "devise/shared/links" %></button>
</div>
<style>
.container{
  width:30%;
  margin:0rem 25rem;
  justify-content:center;
  flex-direction:unset !important;
}
</style>