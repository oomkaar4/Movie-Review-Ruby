  <div class="column">
  <div class="information">
     <h5 class="card-title text-center" style="color:white;"><%=@movie.title%></h5>
        <p class="card-text"><b>Relase-Date: </b><%=@movie.release_date%></p>
        <p class="card-text"><b> Movie Budget in Cr: </b><%=@movie.budget%></p>
        <p class="card-text"><b>Director:</b><%= render @movie.directors %></p>
        <p class="card-text"><b>Actor:</b><%=render @movie.actors%></p>
      
        <p class="card-text"><b>Genere:</b><%=render @movie.geners%><br/>
