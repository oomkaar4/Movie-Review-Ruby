          <button class="btn btn-warning m-2"><%= link_to "Edit Movies", edit_movie_path(@movie),data: {remote: true} %></button>
        <button class="btn btn-danger m-2"><%= link_to "Delete Movies", movie_path(@movie),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></button>
      <%end%>
    <div >
  <br/>
  <h4 class="header" style="color:white;">Ratings :</h4><br/>
  <p class="ratings">
    <%=render @movie.movies_reviewers %>
    
<p id="notice"><%= notice %></p>
  </p>
  </div>
  </div>   
  </div>
  <div class="column">
  <img src="<%=@movie.attachment%>" class="img-thumbnail" alt="images" />
  </div>
  </div>
